@page
@model TuNhanTamTinhRazorPage.Pages.Foods.CreateModel

@{
    ViewData["Title"] = "Tạo Mới";
}

<div class="page-header mb-3">
    <div>
        <h1 class="page-title"><i class="bi bi-plus-circle-dotted me-2"></i>Tạo Món Mới</h1>
        <p class="page-subtitle">Thêm món ăn mới vào thực đơn tươi ngon</p>
    </div>
    <a class="btn btn-outline-primary" asp-page="Index"><i class="bi bi-arrow-left me-1"></i> Quay Lại</a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="glass-card shadow-sm">
            <form method="post" class="row g-3">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-12">
                    <label asp-for="Food.FoodName" class="form-label"></label>
                    <input asp-for="Food.FoodName" class="form-control" placeholder="Ví dụ: Pizza hải sản" />
                    <span asp-validation-for="Food.FoodName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Food.Manufacturer" class="form-label"></label>
                    <input asp-for="Food.Manufacturer" class="form-control" placeholder="Nhà hàng / Đầu bếp" />
                    <span asp-validation-for="Food.Manufacturer" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Food.Rating" class="form-label"></label>
                    <input asp-for="Food.Rating" class="form-control" placeholder="S, A, B..." />
                    <span asp-validation-for="Food.Rating" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Food.ManufacturingDate" class="form-label"></label>
                    <input asp-for="Food.ManufacturingDate" class="form-control" />
                    <span asp-validation-for="Food.ManufacturingDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Food.ExpiryDate" class="form-label"></label>
                    <input asp-for="Food.ExpiryDate" class="form-control" />
                    <span asp-validation-for="Food.ExpiryDate" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Food.Price" class="form-label"></label>
                    <input asp-for="Food.Price" class="form-control" placeholder="Giá tiền" />
                    <span asp-validation-for="Food.Price" class="text-danger"></span>
                </div>
                <div class="col-12 d-flex justify-content-between align-items-center pt-2">
                    <a asp-page="Index" class="btn btn-outline-secondary"><i class="bi bi-arrow-left"></i> Quay Lại Danh Sách</a>
                    <button type="submit" class="btn btn-primary px-4"><i class="bi bi-check2-circle me-1"></i> Tạo Mới</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
