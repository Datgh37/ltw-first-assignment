@page "{id:int?}"
@model TuNhanTamTinhRazorPage.Pages.Foods.DetailsModel

@{
    ViewData["Title"] = "Chi Tiết";
}

<div class="page-header mb-3">
    <div>
        <h1 class="page-title"><i class="bi bi-eye me-2"></i>Chi Tiết Món Ăn</h1>
        <p class="page-subtitle">Thông tin đầy đủ về món ăn bạn chọn</p>
    </div>
    <a class="btn btn-outline-primary" asp-page="Index"><i class="bi bi-arrow-left me-1"></i> Quay Lại</a>
</div>

<div class="glass-card shadow-sm">
    <div class="row g-3">
        <div class="col-12">
            <h4 class="section-title">Đồ Ăn</h4>
            <hr />
        </div>
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Food.FoodName)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Food.FoodName)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Food.Manufacturer)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Food.Manufacturer)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Food.ManufacturingDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Food.ManufacturingDate)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Food.ExpiryDate)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Food.ExpiryDate)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Food.Price)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Food.Price)</dd>
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Food.Rating)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Food.Rating)</dd>
        </dl>
    </div>
</div>
<div class="mt-3 d-flex gap-2">
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Food.Id"><i class="bi bi-pencil-square me-1"></i> Sửa</a>
    <a class="btn btn-outline-secondary" asp-page="./Index"><i class="bi bi-arrow-left"></i> Quay Lại Danh Sách</a>
</div>
